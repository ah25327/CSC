<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.andre.ieeeconverter.MainActivity">

    <!--XML file to layout all of the components; auto-generated by Android Studio-->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:id="@+id/editText"
            android:hint="Enter Number"
            android:gravity="center"
            android:layout_row="0"
            android:layout_column="0" />

        <Space
            android:layout_width="match_parent"
            android:id="@+id/space"
            android:layout_height="200px"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:height="30sp"
            android:gravity="center"
            android:textSize="21sp"
            android:id="@+id/textView"
            android:layout_row="15"
            android:layout_column="0" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convert From Decimal to Binary (Single Precision)"
            android:id="@+id/button"
            android:layout_row="18"
            android:layout_column="0"
             />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convert From Decimal to Binary (Double Precision)"
            android:id="@+id/button2"
            android:layout_row="19"
            android:layout_column="0"
            android:onClick="DBD"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convert from Binary to Decimal"
            android:id="@+id/button3"
            android:layout_row="20"
            android:layout_column="0"
            android:onClick="BD"
            />

    </GridLayout>



</RelativeLayout>
